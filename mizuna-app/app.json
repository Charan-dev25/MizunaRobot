{
  "expo": {
    "name": "mizuna",
    "slug": "mizuna",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/mizuna.png",
    "scheme": "mizunaapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocalNetworkUsageDescription": "This app connects to the robot camera on your local network.",
        "NSBonjourServices": [
          "_http._tcp.",
          "_workstation._tcp.",
          "_http._tcp.",
          "_workstation._tcp."
        ],
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": false,
          "NSExceptionDomains": {
            "raspberrypi.local": {
              "NSIncludesSubdomains": true,
              "NSExceptionAllowsInsecureHTTPLoads": true,
              "NSExceptionMinimumTLSVersion": "1.0"
            }
          }
        }
      },
      "bundleIdentifier": "com.cyrixninja.mizuna"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/mizuna.png",
        "backgroundColor": "#000000"
      },
      "edgeToEdgeEnabled": true,
      "usesCleartextTraffic": true,
      "package": "com.cyrixninja.mizuna"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#232323",
          "image": "./assets/images/splash-icon.png",
          "dark": {
            "image": "./assets/images/splash-icon-dark.png",
            "backgroundColor": "#000000"
          },
          "imageWidth": 200
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "2e7c0ac9-9071-48ad-8c1d-10c9e2f503c2"
      }
    }
  }
}
